---
import Icon from '@components/Icon.astro';
import { slugifyTitle } from '@helpers/helpers.js';

interface Props {
  data: any;
  title?: string;
}

const { data, title } = Astro.props;
---
{title && (
  <h3 id={slugifyTitle(title)} class="mt-4">
    {title}
  </h3>
)}

<div class="mt-3 grid max-w-content gap-3">
  {data.map(contact => (
    <a class="flex gap-3" href={contact.url} target="_blank">
      <Icon name={contact.icon} width="24" height="24" />
      {contact.title}
    </a>
  ))}
</div>