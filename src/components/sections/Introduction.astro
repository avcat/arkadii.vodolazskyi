---
import Img from '@components/Img.astro';

interface Props {
  data: any;
}

const { image, name, position } = Astro.props.data;
---
<div>
  <Img
    class="absolute top-[8mm] right-[8mm] shadow-sm"
    imagePath={image}
    altText="Arkadii Vodolazskyi"
    width={157}
    height={202}
    loading='eager'
  />

  <h2 class="text-center">
    {name}
  </h2>

  <h1 class="text-center">
    {position}
  </h1>
</div>