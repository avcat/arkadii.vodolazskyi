              </h4>
              <p>
                {item.position}
              </p>
            </div>
      
            <div class="px-3 py-2">
              {item.sites && item.sites.map(site => (
                <a class="block" href={site} target="_blank">
                  {sanitizeUrl(site)}
                </a>
              ))}
            </div>
      
            <div class="px-3 py-2 text-balance">
              <ul>
                {item.description && item.description.map(item => (
                  <li>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </PageA4>

    <PageA4>
      <div>
